{
  "manifest_version": 2,

  "name": "Chrogesture Extension",
  "description": "Chrome mouse gesture extension, use gesture up, down, left, right to execute command in chrome",
  "version": "0.0.3",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["cgesture_iframe.css"]
    }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "tabs",
    "history",
    "sessions",
    "http://*/*",
    "https://*/*"
  ]
}
