{
  "manifest_version": 2,

  "name": "CGesture",
  "description": "Chrome Extension, TypeScript, Visual Studio Code Mouse Gesture tab control",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/vendor.js", "js/content_script.js"],
    "css": [
      "cgesture_iframe.css"
    ]
  }],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "tabs",
    "history",
    "sessions",
    "http://*/*", "https://*/*"
  ]
}
